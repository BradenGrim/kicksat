//Initialize the radio class, supplying the Gold Codes that correspond to 0 and 1
SpriteRadio m_radio = SpriteRadio(prn2, prn3);

void setup() {
  pinMode(5, OUTPUT);
  m_radio.txInit();
};


void loop() {
  //Blink LED while transmitter is on
  digitalWrite(5, HIGH);
  m_radio.transmit("Hello Earthlings\n", 17);
  digitalWrite(5, LOW);
};

